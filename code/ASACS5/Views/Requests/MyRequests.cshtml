@using ASACS5.Models.Requests

@model ASACS5.Models.Requests.MyRequestsViewModel

@{
    ViewBag.Title = "My Requests";
}

<h1>My Requests</h1>

<table class="table">
    <thead>
        <tr>
            <th>Item Name</th>
            <th class="hidden-xs">Category</th>
            <th class="hidden-xs hidden-sm">Sub-Category</th>
            <th class="hidden-xs">Storage Type</th>
            <th>Requested Quantity</th>
            <th>Fulfilled Quantity</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Request request in Model.Requests)
        {
            <tr>
                <td>@request.ItemName</td>
                <td class="hidden-xs">@request.Category</td>
                <td class="hidden-xs hidden-sm">@request.SubCategory</td>
                <td class="hidden-xs">@request.StorageType</td>
                <td>@request.RequestedQuantity.ToString()</td>
                <td>@if(@request.Status  != "Pending") { @request.FulfilledQuantity.ToString() }</td>
                <td>@request.Status</td>
                <td><a href="/Requests/MyRequests/Delete/@request.RequestID.ToString()"><span class="glyphicon glyphicon-trash" title="Delete"></span></a></td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Home", "Index", "Home")
</div>